<?xml version="1.0" encoding="UTF-8"?>
<os name="mwos" bits="32" version="mwos1.1">
	<!-- 运行平台配置 -->
	<platform arch="x86">
		<cpu>i386</cpu>
	</platform>

	<!-- 镜像/存储配置 -->
	<image name="mwos.img" size="1440k" device="floppy" format="fat16" mbr="mbr.obj">
		<file name="os.bin">
			<sub name="bootloader.obj" />
			<sub name="core.bin" />
		</file>
		<file name="HelloWorld.mwe"/>
	</image>

	<!-- 源文件 -->
	<codepart type="os" src="src/mbr.asm" obj="mbr.obj" />
	<codepart type="os" src="src/bootloader.asm" obj="bootloader.obj" />
	
	<codepart type="os" obj="core.bin">
		<code>src/OSMain.c</code>
	</codepart>
	<codepart type="app" obj="HelloWorld.mwe">
		<code>app/main.c</code>
	</codepart>
</os> 