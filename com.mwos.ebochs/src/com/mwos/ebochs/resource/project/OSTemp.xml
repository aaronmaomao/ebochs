<?xml version="1.0" encoding="UTF-8"?>
<os name="mwos" bits="32" version="mwos1.1">
	<!-- 运行平台配置 -->
	<platform arch="x86">
		<cpu>i386</cpu>
	</platform>
	
	<!-- 镜像/存储配置 -->
	<image name="mwos.img" size="1440k" driver="floppy" format="fat16">
		<mbr>src/mbr.asm</mbr>
	</image>

	<!-- 源文件/资源 -->
	<source type="core" name="main">
		<code type="bootloader">src/bootloader.asm</code>
		<code>src/OSMain.c</code>
	</source>
	<source type="app" name="HelloWorld.mwe">
		<code>app/main.c</code>
	</source>
</os> 