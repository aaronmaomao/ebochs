<?xml version="1.0" encoding="UTF-8"?>
<os name="mwos" bits="32" version="mwos1.1">
	<!-- 运行平台配置 -->
	<platform arch="x86">
		<cpu>i386</cpu>
	</platform>

	<!-- 镜像/存储配置 -->
	<image name="mwos.img" size="1440k" device="floppy" format="fat16" mbr="mbr.bin">
		<resource type="codepart" name="bootloader.bin" />
		<resource type="codepart" name="os.bin" />
		<resource type="codepart" name="HelloWorld.mwe" />
	</image>

	<!-- 源文件 -->
	<codepart type="core" obj="mbr.bin">
		<code>src/mbr.asm</code>
	</codepart>
	<codepart type="core" obj="bootloader.bin">
		<code>src/bootloader.asm</code>
	</codepart>
	<codepart type="core" obj="os.bin">
		<code>src/OSMain.c</code>
	</codepart>
	<codepart type="app" obj="HelloWorld.mwe">
		<code>app/main.c</code>
	</codepart>
</os> 